<link rel="stylesheet" href="/css/cadastroFisioterapeuta.css" />
<div class="top">
    <h2>Iniciar Sessão</h2>
</div>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.mask/1.14.11/jquery.mask.min.js"></script>

<div class="campo">
    <div class="campo_obrigatorio">
        <label><i style="color: #37bbf8;" class="fas fa-info-circle" aria-hidden="true"></i> Campos
            obrigatórios</label>
    </div>
</div>
<br>

<div class="form">
    <form method="post" action="/cadastro/fisioterapeuta">
        <div class="d-flex flex-column bd-highlight mb-3">
            <div class="p-2 bd-highlight">
                <label class="my-1 mr-2" for="provider_id">Selecionar Fisioterapeuta</label>
                <input type="hidden" name="providerId" id="providerId" value="fisioterapeuta_id">
                <select name="provider_id" class="custom-select my-1 mr-sm-2" id="provider_id">
                    {{#each fisioterapeutas}}
                        <option value="{{dataValues.id}}">{{dataValues.name}}</option>
                    {{/each}}
                </select>
            </div>
        </div>
        <div class="d-flex flex-column bd-highlight mb-3">
            <div class="p-2 bd-highlight">
                <label class="my-1 mr-2" for="provider_id">Selecionar Paciente</label>
                <input type="hidden" name="providerId" id="providerId" value="paciente_id">
                <select name="provider_id" class="custom-select my-1 mr-sm-2" id="provider_id">
                    {{#each pacientes}}
                        <option value="{{dataValues.id}}">{{dataValues.name}}</option>
                    {{/each}}
                </select>
            </div>
        </div>
        <div class="d-flex flex-column bd-highlight mb-3">
            <div class="p-2 bd-highlight">
                <button type="submit" class="btn btn-primary button">
                    Iniciar
                </button>
            </div>
        </div>
    </form>
</div>