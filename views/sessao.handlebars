		function addData(array, arrayLabel, label, data) {
			arrayLabel.push(label);
			array.push(data);
		}

		function plotar() {
			//arrayX.shift();
			//arrayX.shift();
			//arrayLabelX.shift();
			//arrayLabelX.shift();
			myChart.data.labels = arrayLabelX;
			myChart.data.datasets[0].data = arrayX;
