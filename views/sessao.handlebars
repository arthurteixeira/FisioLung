    <!-- VIBRACAO -->
    <div id="vibracaoDiv" class="principal">
		<div class="row">
			<div class="w-100"></div>
			<div class="col graph">
				<canvas id="myChart" width="300" height="200"></canvas>
			</div>
			<div class="col graph">
